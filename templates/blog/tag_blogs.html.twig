{% extends 'base.html.twig' %}

{% block title %}
	{{controller_name}}
{% endblock %}

{% block body %}
	<!-- Breadcrumb Section Begin -->
	<section class="breadcrumb-section set-bg" data-setbg={{ asset('img/breadcrumb.jpg') }}>
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="breadcrumb__text">
						<h2>{{tag.name}}</h2>
						<div class="breadcrumb__option">
							<a href="{{path('home')}}">Accuiel</a>
							<span>Blog</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Breadcrumb Section End -->

	<!-- Blog Section Begin -->
	<section class="blog spad">
		<div class="container">
			<div class="row">
			  {% include "blog/aside.html.twig" %}
				<div class="col-lg-8 col-md-7">
					<div class="row">
						{% for blog in blogs %}
							{% if blog.published %}
								<div class="col-lg-6 col-md-6 col-sm-6">
									<div class="blog__item">
										<div class="blog__item__pic">
											<img src="{{ asset(blog.image) }}" alt="">
										</div>
										<div class="blog__item__text">
											<ul>
												<li>
													<i class="fa fa-calendar-o"></i>
													{{blog.createdAt | date()}}</li>
												<li>
													<i class="fa fa-comment-o"></i>
													{{blog.commentairesBlog | length}}</li>
											</ul>
											<h5>
												<a href="#">{{blog.title}}</a>
											</h5>
											<p>
												{{blog.content | raw | split(',') | first }}...
											</p>
											<a href="{{path('blog_details',{'id':blog.id})}}" class="blog__btn">READ MORE
												<span class="arrow_right"></span>
											</a>
										</div>
									</div>
								</div>
							{% endif %}
						{% endfor %}
						<div class="col-lg-12">
							<div class="product__pagination blog__pagination">
								{{ knp_pagination_render(blogs) }}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Blog Section End -->
{% endblock %}
{% block javascripts %}
	<script src="{{asset('js/search-blog.js')}}"></script>
	<script src="{{asset('js/subscribers-ajax.js')}}"></script>
{% endblock %}
