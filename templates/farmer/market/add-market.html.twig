{%  extends "base_farmer.html.twig" %}
{% block title %} {{controller_name}}
{% endblock %}
{% block bodyFarmer %}
	<main class='main-content bgc-grey-100'>
		<div id='mainContent'>
			<div class="container-fluid">
				<div class="row">
					<div class="col-md-12">
						<h4 class="c-grey-900 mT-10 mB-30">
							<a href="{{ path('markets')}}">
								<i class="ti-arrow-left mR-10"></i>
							</a>Ajouter un march√©</h4>
					</div>
				</div>
				<div class="row">
					{% if message is defined %}
						<div class="form-group col-md-12">
							<div class="alert alert-danger" role="alert">
								<strong>{{message | raw }}</strong>
							</div>
						</div>
					{% endif %}
					{% if add is defined %}
						<div class="form-group col-md-12">
							<div class="alert alert-info" role="alert">
								<strong>{{add | raw }}</strong>
							</div>
						</div>
					{% endif %}
					<div class="col-md-12">
						<div class="bgc-white bd bdrs-3 p-20 mB-20">

							<div class="masonry-item  ">
								<div class="bgc-white p-20 bd">
									<div class="mT-30">
										<form action="{{path('add_market')}}" method="post" enctype="multipart/form-data">
											<div class="form-row">
											<div class="form-group col-md-12">
														<label for="libelle">Nom</label>
														<input type="text" class="form-control" name="libelle" id="libelle" value="{% if market is defined %}{{market.libelle}}{% endif %}">
													</div>
												<div class="form-group col-md-12">
													<label for="inputEmail4">Description</label>
													<textarea class="form-control" id="inputEmail4" name="description" placeholder="Description">{% if market is defined %}{{market.description}}{% endif %}</textarea>
													<div class="form-group col-md-12">
														<label for="inputGroupFileAddon01">Image</label>
														<input type="file" class="form-control" name="file" id="customFile" accept="image/png, image/jpeg">
														<br><br>
													</div>

												</div>
												<button type="submit" name="addMarket" class="btn btn-primary">Suivant</button>
											</form>
										</div>
									</div>
								</div>

							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
	{% endblock %}
