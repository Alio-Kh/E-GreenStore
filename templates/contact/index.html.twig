{% extends 'base.html.twig' %}

{% block title %}
	{{controller_name}}
{% endblock %}

{% block body %}
	<!-- Breadcrumb Section Begin -->
	<section class="breadcrumb-section set-bg" data-setbg={{ asset('img/breadcrumb.jpg') }}>
		<div class="container">
			<div class="row">
				<div class="col-lg-12 text-center">
					<div class="breadcrumb__text">
						<h2>contactez-nous</h2>
						<div class="breadcrumb__option">
							<a href="{{path('home')}}">Accuiel</a>
							<span>contactez-nous</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Breadcrumb Section End -->

	<!-- Contact Section Begin -->
	<section class="contact spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 col-md-3 col-sm-6 text-center">
					<div class="contact__widget">
						<span class="icon_phone"></span>
						<h4>Téléphone</h4>
						<p>+212-6000-00000</p>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-6 text-center">
					<div class="contact__widget">
						<span class="icon_pin_alt"></span>
						<h4>Adresse</h4>
						<p>Marrakech</p>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-6 text-center">
					<div class="contact__widget">
						<span class="icon_clock_alt"></span>
						<h4>Temps ouvert</h4>
						<p>10:00 am to 23:00 pm</p>
					</div>
				</div>
				<div class="col-lg-3 col-md-3 col-sm-6 text-center">
					<div class="contact__widget">
						<span class="icon_mail_alt"></span>
						<h4>Email</h4>
						<p>contact@greenstore.ma</p>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Contact Section End -->

	<!-- Map Begin -->
	<div class="map">
		<iframe src="https://maps.google.com/maps?q=mareakech&t=&z=13&ie=UTF8&iwloc=&output=embed" height="500" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
		<div class="map-inside">
			<i class="icon_pin"></i>
			<div class="inside-widget">
				<h4>Marrakech</h4>
				<ul>
					<li>téléphone: +12-345-6789</li>
					<li>Add: 16 Creek Ave. Farmingdale, NY</li>
				</ul>
			</div>
		</div>
	</div>
	<!-- Map End -->
    





	<!-- Contact Form Begin -->
	<div class="contact-form spad">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="contact__form__title">
						<h2>Laisser un message</h2>
					</div>
				</div>
			</div>

			{{ form_start(form) }}
			<div class="row">
				<div class="col-lg-6 col-md-6 text-center">
					<strong>{{ form_errors(form) }}</strong>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-6 col-md-6">
					{{ form_row(form.nom, {'attr':{'placeholder':'Votre nom','class':'form-control'}}) }}
				</div>
				<div class="col-lg-6 col-md-6">
					{{ form_row(form.sujet, {'attr':{'placeholder':'Votre sujet','class':'form-control'}}) }}
				</div>
				<div class="col-lg-12 col-md-12">
					{{ form_row(form.email, {'attr':{'placeholder':'Votre email','class':'form-control'}}) }}
				</div>
				<div class="col-lg-12 text-center">
					{{ form_row(form.message, {'attr':{'placeholder':'Votre message','class':'form-control'}}) }}
					<button type="submit" class="site-btn">Envoyer</button>
				</div>
			</div>
			{{ form_rest(form) }}

			{{ form_end(form) }}
		</div>
	</div>
	<!-- Contact Form End -->
{% endblock %}
{% block javascripts %}
	<script src="{{asset('js/subscribers-ajax.js')}}"></script>

{% endblock %}
