							<h2>Reduction</h2>
						</div>
						<div class="row">
							<div class="product__discount__slider owl-carousel">
								{% for produit in produitsPromotion  %}
									<div class="col-lg-4">
										<div class="product__discount__item">
											<div class="product__discount__item__pic set-bg" data-setbg={{ asset( produit.image ) }}>
