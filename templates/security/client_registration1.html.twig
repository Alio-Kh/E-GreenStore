{% extends 'base2.html.twig' %}
{% block body %}
<div class="registration">
  <h1>Insctiption</h1>
  <br />
  <small> Seulement pour les clients ...!</small>

  {{ form_start(form) }}
   
  <div class="registrationForm">
    <div class="errors">
      {{ form_errors(form) }}
    </div>
    <div class="row">
      {{ form_row(form.nom, {'attr':{'placeholder':'Votre nom','class':'champText'
      }}) }}
    </div>
    <div class="row">
      {{ form_row(form.prenom, {'attr':{'placeholder':'Votre prenom', 'class':'champText'
      }}) }}
    </div>
    <div class="row">
      {{ form_row(form.adresse, {'attr':{'placeholder':'La location de votre ferme', 'class':'champText'
      }}) }}
    </div>
    <div class="row">
      {{ form_row(form.tele, {'attr':{'placeholder':'numéro du téléphon','class':'champText'
      }}) }}
    </div>
    <button type="submit" class="btn_success">S'inscrire</button>
  </div>
</div>
{{ form_rest(form) }}
   
{{ form_end(form) }}


{% endblock %}